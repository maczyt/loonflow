{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@loonflow/common-tools": ["packages/common-tools/src/index.ts"],
      "@loonflow/components": ["packages/components/src/index.ts"],
      "@loonflow/field-props": ["packages/field-props/src/index.ts"],
      "@loonflow/form-design": ["packages/form-design/src/index.ts"],
      "@loonflow/icon": ["packages/icon/src/index.ts"],
      "@loonflow/process-design": ["packages/process-design/src/index.ts"],
      "@loonflow/render-ui": ["packages/render-ui/src/index.ts"],
      "@loonflow/schema": ["packages/schema/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
